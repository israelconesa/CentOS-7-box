{
  "variables": {
     "no_proxy": "{{env `NO_PROXY`}}"
   },
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/installGUI.cfg <enter><wait>"
      ],
      "boot_wait": "5s",
      "guest_os_type": "RedHat_64",
      "http_directory": "kickstart",
      "iso_checksum": "c875b0f1dabda14f00a3e261d241f63e",
      "iso_checksum_type": "md5",
      "iso_url": "http://centos.serverspace.co.uk/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-1511.iso",
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "password",
      "ssh_username": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso"
    }
  ],
  "post-processors": [
    {
      "output": "CentOS_7_GUI.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "NO_PROXY={{user `no_proxy`}}"
      ],
      "scripts": [
        "scripts/01-vagrant.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/02-docker.sh",
        "scripts/03-java.sh",
        "scripts/04-clean.sh"
      ],
      "type": "shell"
    }
  ]
}
